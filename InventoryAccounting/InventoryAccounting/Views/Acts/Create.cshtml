@using Microsoft.AspNetCore.Mvc.Abstractions
@model InventoryAccounting.Models.DB.Acts
@{
    ViewData["Title"] = "Добавление";
    Layout = "~/Views/Shared/_Layout.cshtml";
    string action = ViewContext.RouteData.Values["Action"].ToString();
}
<div id="modal-placeholder"></div>
<div class="row">
    <div class="col-md-12">
        <h2>@Html.Raw(action == "Create" ? "Добавление" : "Изменение") акта</h2>
        <hr/>
        @await Html.PartialAsync("_Input", Model)
        <div class="form-group">
            <input type="submit" form="form" value="@Html.Raw(action == "Create" ? "Добавить" : "Изменить")" class="btn btn-dark"/>
            <a asp-action="Index" class="btn btn-dark">Назад</a>
        </div>
    </div>
</div>
<script type="text/javascript">
    document.addEventListener('DOMContentLoaded', function(){
        UpdateContracts();
    });
</script>