@model InventoryAccounting.Models.DB.Acts

@{
    Layout = null;
    string action = ViewContext.RouteData.Values["Action"].ToString();
}
<form asp-action="@action" id="form">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input name="IsValid" type="hidden" value="@ViewData.ModelState.IsValid.ToString()" />
    <div class="form-group">
        <label asp-for="ActNumber" class="col-form-label"></label>
        <input asp-for="ActNumber" class="form-control"/>
        <span asp-validation-for="ActNumber" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ContractId" class="col-form-label"></label>
        <div class="input-group">
            <select id="ContractsSelect" asp-for="ContractId" class="form-control"></select> 
            <div class="input-group-append">
                <a href="#" class="btn btn-outline-secondary" onclick="UpdateContracts()"><i class="fas fa-redo-alt"></i></a>
                <a href="#" class="btn btn-outline-secondary" data-target="#modal-container" data-toggle="modal" data-url="@Url.RouteUrl(new {controller = "Contracts", action = "CreateModal"})">Добавить</a>
            </div>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Type" class="col-form-label"></label>
        <input asp-for="Type" class="form-control"/>
        <span asp-validation-for="Type" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="CompilationDate" class="col-form-label"></label>
        <input asp-for="CompilationDate" type="date" class="form-control"/>
        <span asp-validation-for="CompilationDate" class="text-danger"></span>
    </div>
</form>
