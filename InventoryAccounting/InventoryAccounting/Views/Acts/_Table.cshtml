@model IEnumerable<InventoryAccounting.Models.DB.Acts>
<div class="btn-group nav nav-pills nav-fill" data-toggle="buttons">
    <label class="btn btn-outline-success active toggle-vis" data-column="0">
        <input type="checkbox" hidden="true" autocomplete="off">@Html.DisplayNameFor(model => model.ActNumber)
        <span class="fa fa-check "></span>
    </label>

    <label class="btn btn-outline-success active toggle-vis" data-column="1">
        <input type="checkbox" hidden="true" autocomplete="off">@Html.DisplayNameFor(model => model.ContractId)
        <span class="fa fa-check"></span>
    </label>

    <label class="btn btn-outline-success active toggle-vis" data-column="2">
        <input type="checkbox" hidden="true" autocomplete="off">@Html.DisplayNameFor(model => model.Type)
        <span class="fa fa-check"></span>
    </label>

    <label class="btn btn-outline-success active toggle-vis" data-column="3">
        <input type="checkbox" hidden="true" autocomplete="off">@Html.DisplayNameFor(model => model.CompilationDate)
        <span class="fa fa-check"></span>
    </label>
</div>
<table class="table" id="main-table" data-url="@Url.Action("Index")">
    <thead>
    <tr>
        <th>@Html.DisplayNameFor(model => model.ActNumber)</th>
        <th>@Html.DisplayNameFor(model => model.ContractId)</th>
        <th>@Html.DisplayNameFor(model => model.Type)</th>
        <th>@Html.DisplayNameFor(model => model.CompilationDate)</th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.ActNumber)</td>
            <td>@Html.DisplayFor(modelItem => item.Contract.ContractNumber)</td>
            <td>@Html.DisplayFor(modelItem => item.Type)</td>
            <td>@Html.DisplayFor(modelItem => item.CompilationDate)</td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="far fa-edit text-dark fa-1x"></a>
                <a href="#" class="fas fa-info-circle text-dark fa-1x" data-target="#modal-container" data-toggle="modal" data-url="@Url.RouteUrl(new {Action="Details", Id=item.Id})"></a>
                <a href="#" class="far fa-trash-alt text-dark fa-1x" data-target="#modal-container" data-toggle="modal" data-url="@Url.RouteUrl(new {Action="Delete", Id=item.Id})"></a>
            </td>
        </tr>
    }
    </tbody>
</table>

