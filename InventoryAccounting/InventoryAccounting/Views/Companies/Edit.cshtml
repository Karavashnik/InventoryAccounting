@model InventoryAccounting.Models.DB.Companies

@{
    Layout = null;
}
<div id="modal-container" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="myExtraLargeModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Изменение компании</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-md-12">
                            <form asp-action="Edit" id="form">
                                <input name="IsValid" type="hidden" value="@ViewData.ModelState.IsValid.ToString()" />
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <div class="form-group">
                                    <label asp-for="Unp" class="col-form-label"></label>
                                    <input asp-for="Unp" class="form-control"/>
                                    <span asp-validation-for="Unp" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Name" class="col-form-label"></label>
                                    <input asp-for="Name" class="form-control"/>
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Address" class="col-form-label"></label>
                                    <input asp-for="Address" class="form-control"/>
                                    <span asp-validation-for="Address" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="DirectorsName" class="col-form-label"></label>
                                    <input asp-for="DirectorsName" class="form-control"/>
                                    <span asp-validation-for="DirectorsName" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="DirectorsPhone" class="col-form-label"></label>
                                    <input asp-for="DirectorsPhone" class="form-control"/>
                                    <span asp-validation-for="DirectorsPhone" class="text-danger"></span>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button form="form" type="button" data-save="modal" class="btn btn-dark">Изменить</button>
            </div>
        </div>
    </div>
</div>