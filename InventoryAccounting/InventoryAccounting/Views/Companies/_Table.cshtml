@model IEnumerable<InventoryAccounting.Models.DB.Companies>
<div class="btn-group nav nav-pills nav-fill" data-toggle="buttons">
    <label class="btn btn-outline-success active toggle-vis" data-column="0">
        <input type="checkbox" hidden="true" autocomplete="off">@Html.DisplayNameFor(model => model.Unp)
        <span class="fa fa-check "></span>
    </label>

    <label class="btn btn-outline-success active toggle-vis" data-column="1">
        <input type="checkbox" hidden="true" autocomplete="off">@Html.DisplayNameFor(model => model.Name)
        <span class="fa fa-check"></span>
    </label>

    <label class="btn btn-outline-success active toggle-vis" data-column="2">
        <input type="checkbox" hidden="true" autocomplete="off">@Html.DisplayNameFor(model => model.Address)
        <span class="fa fa-check"></span>
    </label>

    <label class="btn btn-outline-success active toggle-vis" data-column="3">
        <input type="checkbox" hidden="true" autocomplete="off">@Html.DisplayNameFor(model => model.DirectorsName)
        <span class="fa fa-check"></span>
    </label>

    <label class="btn btn-outline-success active toggle-vis" data-column="4">
        <input type="checkbox" hidden="true" autocomplete="off">@Html.DisplayNameFor(model => model.DirectorsPhone)
        <span class="fa fa-check"></span>
    </label>
</div>
<table class="table" id="main-table" data-url="@Url.Action("Index")">
    <thead>
        <tr>
            <th scope="col">@Html.DisplayNameFor(model => model.Unp)</th>
            <th scope="col">@Html.DisplayNameFor(model => model.Name)</th>
            <th scope="col">@Html.DisplayNameFor(model => model.Address)</th>
            <th scope="col">@Html.DisplayNameFor(model => model.DirectorsName)</th>
            <th scope="col">@Html.DisplayNameFor(model => model.DirectorsPhone)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.Unp)</td>
            <td>@Html.DisplayFor(modelItem => item.Name)</td>
            <td>@Html.DisplayFor(modelItem => item.Address)</td>
            <td>@Html.DisplayFor(modelItem => item.DirectorsName)</td>
            <td>@Html.DisplayFor(modelItem => item.DirectorsPhone)</td>
            <td>
                <a href="#" class="far fa-edit text-dark fa-1x" data-target="#modal-container" data-toggle="modal" data-url="@Url.RouteUrl(new {Action="Edit", Id=item.Id})"></a>
                <a href="#" class="fas fa-info-circle text-dark fa-1x" data-target="#modal-container" data-toggle="modal" data-url="@Url.RouteUrl(new {Action="Details", Id=item.Id})"></a>
                <a href="#" class="far fa-trash-alt text-dark fa-1x" data-target="#modal-container" data-toggle="modal" data-url="@Url.RouteUrl(new {Action="Delete", Id=item.Id})"></a>
            </td>
        </tr>
    }
    </tbody>
</table>
