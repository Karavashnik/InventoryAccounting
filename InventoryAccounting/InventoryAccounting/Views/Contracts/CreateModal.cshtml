@model InventoryAccounting.Models.DB.Contracts

<div id="modal-container" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="myExtraLargeModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Добавление контракта</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-md-12">
                            <form asp-action="CreateModal">
                                <input name="IsValid" type="hidden" value="@ViewData.ModelState.IsValid.ToString()" />
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <div class="form-group">
                                    <label asp-for="ContractNumber" class="col-form-label"></label>
                                    <input asp-for="ContractNumber" class="form-control"/>
                                    <span asp-validation-for="ContractNumber" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="CompanyId" class="col-form-label"></label>
                                    <div class="input-group">
                                        <select id="CompanySelect" asp-for="CompanyId" class="form-control"></select>
                                        <div class="input-group-append">
                                            <a href="#" class="btn btn-outline-secondary" onclick="UpdateCompanies()">
                                                <i class="fas fa-redo-alt"></i>
                                            </a>
                                            <a href="#" class="btn btn-outline-secondary" data-target="#modal-container" data-toggle="modal" data-url="@Url.RouteUrl(new {controller = "Companies", action = "Create"})">Добавить</a>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Type" class="col-form-label"></label>
                                    <input asp-for="Type" class="form-control"/>
                                    <span asp-validation-for="Type" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="CompilationDate" class="col-form-label"></label>
                                    <input asp-for="CompilationDate" type="date" class="form-control"/>
                                    <span asp-validation-for="CompilationDate" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="ExpirationDate" class="col-form-label"></label>
                                    <input asp-for="ExpirationDate" type="date" class="form-control"/>
                                    <span asp-validation-for="ExpirationDate" class="text-danger"></span>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button form="form" type="button" data-save="modal" class="btn btn-dark">Добавить</button>
            </div>
        </div>
    </div>
</div>