@model InventoryAccounting.Models.DB.Contracts

@{
    ViewData["Title"] = "Изменение";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <h2>Изменение контракта</h2>
        <hr />
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ContractNumber" class="col-form-label"></label>
                <input asp-for="ContractNumber" class="form-control"/>
                <span asp-validation-for="ContractNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CompanyId" class="col-form-label"></label>
                <select asp-for="CompanyId" class="form-control" asp-items="ViewBag.CompanyUnp"></select>
                <div class="input-group-append">
                    <a href="#" class="btn btn-outline-secondary" data-target="#modal-container" data-toggle="modal" data-url="@Url.Action("Create")">Добавить</a>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Type" class="col-form-label"></label>
                <input asp-for="Type" class="form-control"/>
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CompilationDate" class="col-form-label"></label>
                <input asp-for="CompilationDate" type="date" class="form-control"/>
                <span asp-validation-for="CompilationDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ExpirationDate" class="col-form-label"></label>
                <input asp-for="ExpirationDate" type="date" class="form-control"/>
                <span asp-validation-for="ExpirationDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Изменить" class="btn btn-dark"/>
                <a asp-action="Index" class="btn btn-dark">Назад</a>
            </div>
        </form>
    </div>
</div>

