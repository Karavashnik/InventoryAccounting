@model IEnumerable<InventoryAccounting.Models.DB.Contracts>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CompilationDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CompanyId)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CompilationDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Company.DirectorsName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ContractNumber">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ContractNumber">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ContractNumber">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
