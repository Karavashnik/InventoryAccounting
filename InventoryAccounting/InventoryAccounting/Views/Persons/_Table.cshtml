@model IEnumerable<InventoryAccounting.Models.DB.Persons>
<div class="btn-group nav nav-pills nav-fill" data-toggle="buttons">
    <label class="btn btn-outline-success active toggle-vis" data-column="0">
        <input type="checkbox" hidden="true" autocomplete="off">@Html.DisplayNameFor(model => model.PersonnelNumber)
        <span class="fa fa-check "></span>
    </label>

    <label class="btn btn-outline-success active toggle-vis" data-column="1">
        <input type="checkbox" hidden="true" autocomplete="off">@Html.DisplayNameFor(model => model.LastName)
        <span class="fa fa-check"></span>
    </label>

    <label class="btn btn-outline-success active toggle-vis" data-column="2">
        <input type="checkbox" hidden="true" autocomplete="off">@Html.DisplayNameFor(model => model.FirstName)
        <span class="fa fa-check"></span>
    </label>

    <label class="btn btn-outline-success active toggle-vis" data-column="3">
        <input type="checkbox" hidden="true" autocomplete="off">@Html.DisplayNameFor(model => model.MiddleName)
        <span class="fa fa-check"></span>
    </label>

    <label class="btn btn-outline-success active toggle-vis" data-column="4">
        <input type="checkbox" hidden="true" autocomplete="off">@Html.DisplayNameFor(model => model.DateOfBirth)
        <span class="fa fa-check"></span>
    </label>

    <label class="btn btn-outline-success active toggle-vis" data-column="5">
        <input type="checkbox" hidden="true" autocomplete="off">@Html.DisplayNameFor(model => model.PassportDetails)
        <span class="fa fa-check"></span>
    </label>

    <label class="btn btn-outline-success active toggle-vis" data-column="6">
        <input type="checkbox" hidden="true" autocomplete="off">@Html.DisplayNameFor(model => model.Education)
        <span class="fa fa-check"></span>
    </label>

    <label class="btn btn-outline-success active toggle-vis" data-column="7">
        <input type="checkbox" hidden="true" autocomplete="off">@Html.DisplayNameFor(model => model.DateOfEmployment)
        <span class="fa fa-check"></span>
    </label>

    <label class="btn btn-outline-success active toggle-vis" data-column="8">
        <input type="checkbox" hidden="true" autocomplete="off">@Html.DisplayNameFor(model => model.Phone)
        <span class="fa fa-check"></span>
    </label>

    <label class="btn btn-outline-success active toggle-vis" data-column="9">
        <input type="checkbox" hidden="true" autocomplete="off">@Html.DisplayNameFor(model => model.Email)
        <span class="fa fa-check"></span>
    </label>

    <label class="btn btn-outline-success active toggle-vis" data-column="10">
        <input type="checkbox" hidden="true" autocomplete="off">@Html.DisplayNameFor(model => model.Post)
        <span class="fa fa-check"></span>
    </label>
</div>
<table class="table" id="main-table" data-url="@Url.Action("Index")">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.PersonnelNumber)</th>
            <th>@Html.DisplayNameFor(model => model.LastName)</th>
            <th>@Html.DisplayNameFor(model => model.FirstName)</th>
            <th>@Html.DisplayNameFor(model => model.MiddleName)</th>
            <th>@Html.DisplayNameFor(model => model.DateOfBirth)</th>
            <th>@Html.DisplayNameFor(model => model.PassportDetails)</th>
            <th>@Html.DisplayNameFor(model => model.Education)</th>
            <th>@Html.DisplayNameFor(model => model.DateOfEmployment)</th>
            <th>@Html.DisplayNameFor(model => model.Phone)</th>
            <th>@Html.DisplayNameFor(model => model.Email)</th>
            <th>@Html.DisplayNameFor(model => model.Post)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.PersonnelNumber)</td>
            <td>@Html.DisplayFor(modelItem => item.LastName)</td>
            <td>@Html.DisplayFor(modelItem => item.FirstName)</td>
            <td>@Html.DisplayFor(modelItem => item.MiddleName)</td>
            <td>@Html.DisplayFor(modelItem => item.DateOfBirth)</td>
            <td>@Html.DisplayFor(modelItem => item.PassportDetails)</td>
            <td>@Html.DisplayFor(modelItem => item.Education)</td>
            <td>@Html.DisplayFor(modelItem => item.DateOfEmployment)</td>
            <td>@Html.DisplayFor(modelItem => item.Phone)</td>
            <td>@Html.DisplayFor(modelItem => item.Email)</td>
            <td>@Html.DisplayFor(modelItem => item.Post)</td>
            <td>
                <a href="#" class="far fa-edit text-dark fa-1x" data-target="#modal-container" data-toggle="modal" data-url="@Url.RouteUrl(new {Action="Edit", Id=item.Id})"></a>
                <a href="#" class="fas fa-info-circle text-dark fa-1x" data-target="#modal-container" data-toggle="modal" data-url="@Url.RouteUrl(new {Action="Details", Id=item.Id})"></a>
                <a href="#" class="far fa-trash-alt text-dark fa-1x" data-target="#modal-container" data-toggle="modal" data-url="@Url.RouteUrl(new {Action="Delete", Id=item.Id})"></a>
            </td>
        </tr>
}
    </tbody>
</table>
