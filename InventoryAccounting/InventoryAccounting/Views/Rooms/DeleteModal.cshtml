@model InventoryAccounting.Models.DB.Rooms

@{
    Layout = null;
}
<div class="modal-header">
    <h5 class="modal-title">Удалить помещение?</h5>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
<div class="modal-body">
    <div class="container-fluid">
        <div class="row my-1">
            <span class="col-md-4 font-weight-bold">@Html.DisplayNameFor(model => model.Name)</span>
            <span class="col-md-8">@Html.DisplayFor(model => model.Name)</span>
        </div>
        <div class="row my-1">
            <span class="col-md-4 font-weight-bold">@Html.DisplayNameFor(model => model.Floor)</span>
            <span class="col-md-8">@Html.DisplayFor(model => model.Floor)</span>
        </div>
        <div class="row my-1">
            <span class="col-md-4 font-weight-bold">@Html.DisplayNameFor(model => model.Number)</span>
            <span class="col-md-8">@Html.DisplayFor(model => model.Number)</span>
        </div>
        <div class="row my-1">
            <span class="col-md-4 font-weight-bold">@Html.DisplayNameFor(model => model.Phone)</span>
            <span class="col-md-8">@Html.DisplayFor(model => model.Phone)</span>
        </div>
    </div>
</div>
<div class="modal-footer">
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Удалить" class="btn btn-dark" /> 
    </form>
</div>
